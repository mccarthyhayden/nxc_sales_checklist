<?xml version="1.0"?>
<odoo>
  <data>
    <record id="view_nxc_sales_checklist_form" model="ir.ui.view">
      <field name="name">nxc.sales.checklist.form</field>
      <field name="model">nxc.sales.checklist</field>
      <field name="inherit_id">sale.view_order_form</field>
      <field name="arch" type="xml">
        <form string="Sales Checklist" version="1.0">
          <header>
            <field name="state" attrs="{'invisible': true}"/>
            <xpath expr="//header/button[@name='action_quotation_send' and @states='draft']" position="replace">
                <button name="1300" string="Send by Email" type="action" states="draft" class="btn-primary" data-hotkey="g"/>
            </xpath>
            <xpath expr="//header/button[@name='action_quotation_send' and @states='sent,sale']" position="replace">
                <button name="1299" string="Re-Send by Email" type="action" states="sent" data-hotkey="g"/>
            </xpath>
          </header>
          <sheet>
            <field name="payment_term_id" />
            <field name="sales_checklist_status" widget="kanban_state_selection" force_save="True" attrs="" readonly="1"/>
            <page string="Feasibility Review" name="page_feasibility_review">
              <group name="group_feasibility_review">
                <group name="group_feasibility_review_left" string="Complete The Following: (Prior to quote send)">
                  <field name="feasibility_review_item_1"/>
                  <field name="feasibility_review_item_2"/>
                  <field name="feasibility_review_item_3"/>
                  <field name="feasibility_review_item_4"/>
                </group>
                <group name="group_feasibility_review_right">
                  <field name="feasibility_review_item_5"/>
                  <field name="feasibility_review_item_6"/>
                  <field name="feasibility_review_item_7"/>
                  <field name="feasibility_review_item_8"/>
                  <field name="feasibility_review_item_9"/>
                  <field name="feasibility_review_complete" widget="boolean_toggle" invisible="1"/>
                </group>
              </group>
              <group name="group_feasibility_review_optional">
                <group name="group_feasibility_review_optional_left" string="Medical Devices Only:">
                  <field name="device_master_record_complete" help="Located in product page"/>
                </group>
                <group name="group_feasibility_review_optional_right">
                  <field name="feasibility_remarks"/>
                </group>
              </group>
            </page>
            <page string="Contract Review" name="page_contract_review" attrs="{'invisible': [['feasibility_review_complete', '=', False]]}">
              <group name="group_contract_review">
                <group name="group_contract_review_left" string="Verify the following is consistent between Quote and Purchase Order: (To be completed when processing incoming PO)">
                  <field name="contract_review_item_1" help="Useful for BOM assignment"/>
                  <field name="contract_review_item_2"/>
                  <field name="contract_review_item_3" help="NXC Standard: Net 30"/>
                  <field name="contract_review_item_4" />
                </group>
                <group name="group_contract_review_right">
                  <field name="contract_review_item_5"/>
                  <field name="contract_review_item_6"/>
                  <field name="contract_review_item_7"/>
                  <field name="contract_review_item_8"help="Delivery Date to be set in 'Other Info' tab. Product-specific lead times (optional) can be set in product page."/>
                  <field name="contract_review_complete" widget="boolean_toggle" attrs="" invisible="1"/>
                </group>
              </group>
            </page>
          </sheet>
        </form>
    </record>
  </data>
</odoo>